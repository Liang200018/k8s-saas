<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lzy.k8s.saas.infra.repo.mapper.AwsKeyPairMapper">

    <select id="selectByKeyName" parameterType="String" resultType="com.lzy.k8s.saas.infra.param.AwsKeyPairInfo">
        select
        account_id          AS accountId
        ,key_name            AS keyName
        ,AES_DECRYPT(key_material, 'test-salt')           AS keyMaterial
        ,created_time       AS createdTime
        from biz_center.aws_key_pairs
        where account_id=#{account_id}
        and key_name=#{key_name}
    </select>

    <insert id="insertKeyPair" parameterType="com.lzy.k8s.saas.infra.param.AwsKeyPairInfo">
        insert into biz_center.aws_key_pairs(
        account_id
        ,key_name
        ,key_material
        ,created_time
        )
        values(
        #{accountId}
        ,#{keyName}
        ,AES_ENCRYPT(#{keyMaterial}, 'test-salt')
        ,#{createdTime}
        )
    </insert>

</mapper>